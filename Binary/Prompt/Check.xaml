<Window x:Class="Binary.Prompt.Check"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check" Height="250" Width="400">
    <Grid>
        <!-- Description Label -->
        <Label x:Name="LabelDescription" Content="Description" HorizontalAlignment="Center" VerticalAlignment="Top"
               Margin="10" />

        <!-- CheckBox for Selection -->
        <CheckBox x:Name="CheckBoxSelection" Content="Check Selection" HorizontalAlignment="Center"
                  VerticalAlignment="Center" />

        <!-- OK Button -->
        <Button x:Name="CheckButtonOK" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="50,0,0,20" Width="100" Click="CheckButtonOK_Click" />

        <!-- Cancel Button -->
        <Button x:Name="CheckButtonCancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,50,20" Width="100" Click="CheckButtonCancel_Click" />
    </Grid>
</Window>
