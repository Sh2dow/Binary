<Window x:Class="Binary.Prompt.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="200" Width="400">
    <Grid>
        <!-- Label for Input Prompt -->
        <Label x:Name="InputLabel" Content="Input value" HorizontalAlignment="Center" VerticalAlignment="Top"
               Margin="10" />

        <!-- TextBox for User Input -->
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />

        <!-- OK Button -->
        <Button x:Name="InputButtonOK" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="50,0,0,20" Width="100" Click="InputButtonOK_Click" />

        <!-- Cancel Button -->
        <Button x:Name="InputButtonCancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,50,20" Width="100" Click="InputButtonCancel_Click" />
    </Grid>
</Window>
