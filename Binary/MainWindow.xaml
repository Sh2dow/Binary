<Window x:Class="Binary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intro UI" Height="400" Width="600">
    <DockPanel>
        <!-- Replace PictureBox with Image in WPF -->
        <Image Source="{Binding IntroPictureUserImage}" MouseDown="IntroPictureUser_Click" DockPanel.Dock="Top" Width="100" Height="100" />
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Button Content="Discord" Click="PictureBoxDiscord_Click" />
            <Button Content="Open Docs" Click="PictureBoxDocs_Click" />
            <Button Content="Check GitHub" Click="PictureBoxGitHub_Click" />
        </StackPanel>
    </DockPanel>
</Window>